@model HospitalSchedule.Models.Rules

@{
    ViewData["Title"] = "Create Rules";
}

<h2>Create Rules</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WeeklyHours" class="control-label">Weekly Hours</label>
                <input asp-for="WeeklyHours" class="form-control" />
                <span asp-validation-for="WeeklyHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NurseAge" class="control-label">Nurse's Age</label>
                <input asp-for="NurseAge" class="form-control" />
                <span asp-validation-for="NurseAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChildAge" class="control-label">Nurse's Child's Age</label>
                <input asp-for="ChildAge" class="form-control" />
                <span asp-validation-for="ChildAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InBetweenShiftTime" class="control-label">Time Between Shifts</label>
                <input asp-for="InBetweenShiftTime" class="form-control" />
                <span asp-validation-for="InBetweenShiftTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
