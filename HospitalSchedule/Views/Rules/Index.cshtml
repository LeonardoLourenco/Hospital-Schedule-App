@model RulesView

@{
    ViewData["Title"] = "Rules";
}

<h2>Rules</h2>

<p>
    <a asp-action="Create" class="btn btn-default" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @using (Html.BeginForm())
            {
            <p>
                Find by weekly hours: <input type="text" name="Search" placeholder="" />
                <input type="submit" value="Search" />
            </p>
            }


        @if (TempData["Success"] != null)
        {
            <script type="text/javascript">
                alert('@TempData["Success"]');
            </script>
        }

        
            <th>
                Weekly Hours
            </th>
            <th>
                Nurse's Age
            </th>
            <th>
                Nurse's Child's Age
            </th>
            <th>
                Time Between Shifts
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rules) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WeeklyHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NurseAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChildAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InBetweenShiftTime)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.RulesId">Edit</a>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.RulesId">Details</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.RulesId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div page-model="@Model.PagingInfo" page-action="" class="btn-group pull-right">

</div>