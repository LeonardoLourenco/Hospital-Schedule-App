@model HospitalSchedule.Models.OperationBlock_Shifts

@{
    ViewData["Title"] = "Create Operation Block - Shift";
}

<h2>Create Operation Block - Shift</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OperationBlockId" class="control-label">Operation Block</label>
                <select asp-for="OperationBlockId" class="form-control" asp-items="ViewBag.OperationBlockId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ShiftId" class="control-label">Shift</label>
                <select asp-for="ShiftId" class="form-control" asp-items="ViewBag.ShiftId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
