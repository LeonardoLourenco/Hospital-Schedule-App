@model OperationBlock_ShiftView

@{
    ViewData["Title"] = "Operation Block - Shift";
}

<h2>Operation Block - Shift</h2>

<p>
    <a asp-action="Create" class="btn btn-default" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @using (Html.BeginForm())
            {
                <p>
                    Find by name: <input type="text" name="Search" placeholder="Insert shift name" />
                    <input type="submit" value="Search" />
                </p>
            }

          @if (TempData["Success"] != null)
        {
            <script type="text/javascript">
                alert('@TempData["Success"]');
            </script>
        }
            <th>
                BlockName
            </th>

            <th>
                Shift
            </th>
           <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OperationBlock_Shifts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OperationBlock.BlockName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift.ShiftName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.OperationBlock_ShiftsId">Edit</a>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.OperationBlock_ShiftsId">Details</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.OperationBlock_ShiftsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div page-model="@Model.PagingInfo" page-action="" class="btn-group pull-right">

</div>