@model IEnumerable<HospitalSchedule.Models.OperationBlock>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlockName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlockName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OperationBlockId" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OperationBlockId" class="btn btn-secondary" >Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OperationBlockId" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
