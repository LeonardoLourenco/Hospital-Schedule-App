@model HospitalSchedule.Models.OperationBlock

@{
    ViewData["Title"] = "Delete Operation Block";
}

<h2>Delete Operation Block</h2>

<h3>Are you sure you want to delete this operation block?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Operation Block
            @*@Html.DisplayNameFor(model => model.BlockName)*@
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BlockName)
        </dd>
    </dl>

    <input type="submit" value="Delete" class="btn btn-warning" onclick="toggle_div_fun('sectiontohide');" />
    <a asp-action="Index" class="btn btn-primary">Back to List</a>

    <div id="hideablediv" hidden>
        <p></p>
        <h5>Are you really sure you want to delete this?</h5>

        <form asp-action="Delete">
            <input type="hidden" asp-for="OperationBlockId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>

<script type="text/javascript">
    function toggle_div_fun(id) {

        var divelement = document.getElementById('hideablediv');


        divelement.style.display = 'block';

    }
</script>
