@model NursesView

@{
    ViewData["Title"] = "List of Nurses";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

@if (TempData["Success"] != null)
{
    <p>Created successfully</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>

            <th>
                Type
            </th>
            <th>
                CellPhoneNumber
            </th>
            <th>
                Speciality
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Nurses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellPhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NurseId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.NurseId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.NurseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>



<div page-model="@Model.PagingInfo" page-action="" class="btn-group pull-right">

</div>


