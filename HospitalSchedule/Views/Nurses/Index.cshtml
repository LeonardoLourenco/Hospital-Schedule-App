@model NursesView

@{
    ViewData["Title"] = "Nurse";
}

<h2>Nurse</h2>

<p>
    <a asp-action="Create" class="btn btn-default" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @using (Html.BeginForm())
            {
                <p>
                    Find by name: <input type="text" name="Search"  placeholder="Insert nurse name" />
                    <input type="submit" value="Search" />
                </p>
            }

            @if (TempData["Success"]!= null) 
            {
                <script type="text/javascript">
                alert('@TempData["Success"]');
                </script>
            }

            <th>
                Name
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
           
            <th>
                Type
                @*@Html.DisplayNameFor(model => model.Type)*@
            </th>
            <th>
                Cell Phone Number
                @*@Html.DisplayNameFor(model => model.CellPhoneNumber)*@
            </th>
       
            <th>
                Speciality
                @*@Html.DisplayNameFor(model => model.Specialty)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Nurses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellPhoneNumber)
                </td>                   
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty.Name)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.NurseId">Edit</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.NurseId">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.NurseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>



<div page-model="@Model.PagingInfo" page-action="" class="btn-group pull-right">

</div>


