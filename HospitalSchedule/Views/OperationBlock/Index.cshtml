@*model IEnumerable<HospitalSchedule.Models.OperationBlock>*@
@model OperationBlockView

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @using (Html.BeginForm())
            {
                <p>
                    Find by name: <input type="text" name="Search" placeholder="Insert operation block name" />
                    <input type="submit" value="Search" />
                </p>
            }

            @if (TempData["Success"] != null)
            {
                <p>Created successfully</p>
            }

            <th>
                BlockName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OperationBlocks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BlockName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OperationBlockId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OperationBlockId" class="btn btn-secondary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OperationBlockId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div page-model="@Model.PagingInfo" page-action="" class="btn-group pull-right">

</div>

