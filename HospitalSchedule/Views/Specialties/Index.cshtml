@model SpecialitiesView

@{
    ViewData["Title"] = "Speciality";
}

<h2>Speciality</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>
<table class="table">
    <thead>

        @if (TempData["Success"] != null)
        {
            <script type="text/javascript">
                alert('@TempData["Success"]');
            </script>
        }

        <tr>
            @using (Html.BeginForm())
            {
                <p>
                    Find by specialty's name: <input type="text" name="Search" placeholder="" />
                    <input type="submit" value="Search" />
                </p>
            }
            <th>
                Name
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Specialties)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.SpecialtyId">Edit</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.SpecialtyId">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SpecialtyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<div page-model="@Model.PagingInfo" page-action="" class="btn-group pull-right">

</div>