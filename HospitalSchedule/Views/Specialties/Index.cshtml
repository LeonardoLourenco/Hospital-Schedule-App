@model SpecialitiesView

@{
    ViewData["Title"] = "Index";
}

<h2>Specialities List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Specialties)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SpecialtyId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SpecialtyId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SpecialtyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div page-model="@Model.PagingInfo" page-action="" class="btn-group pull-right">

</div>