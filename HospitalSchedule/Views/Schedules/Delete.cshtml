@model HospitalSchedule.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
}

<h2>Delete Schedule</h2>

<h3>Are you sure you want to delete this schedule?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nurse)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nurse.Name)
        </dd>
        <dt>
            Nurse's Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nurse.Email)
        </dd>
        <dt>
            Operation Block
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OperationBlock_Shifts.OperationBlock.BlockName)
        </dd>
        <dt>
            Shift
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OperationBlock_Shifts.Shift.ShiftName)
        </dd>
    </dl>

    <input type="submit" value="Delete" class="btn btn-warning" onclick="toggle_div_fun('sectiontohide');"/>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>

    <div id="hideablediv" hidden>
        <p></p>
        <h5>Are you really sure you want to delete this?</h5>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ScheduleId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>


<script type="text/javascript">
    function toggle_div_fun(id) {

        var divelement = document.getElementById('hideablediv');

       
            divelement.style.display = 'block';
        
    }
</script>