@model ShiftsView

@{
    ViewData["Title"] = "Shift";
}

<h2>Shift</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>
<table class="table">
    <thead>

        @if (TempData["Success"] != null)
        {
            <script type="text/javascript">
                alert('@TempData["Success"]');
            </script>
        }

        <tr>
            @using (Html.BeginForm())
            {
                <p>
                    Find by shift's name: <input type="text" name="Search" placeholder="" />
                    <input type="submit" value="Search" />
                </p>
            }
            <th>
                Shift Name
            </th>
            <th>
                Starting Hour
            </th>
            <th>
                Duration
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Shifts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShiftName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ShiftId">Edit</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.ShiftId">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ShiftId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div page-model="@Model.PagingInfo" page-action="" class="btn-group pull-right">

</div>