@model HospitalSchedule.Models.Exchange_Request

@{
    ViewData["Title"] = "Validate Exchange Request";
}

<h2>Validate Exchange Request</h2>

<hr />
<div class="row">
    <div class="col-md-4">
 
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Exchange_RequestId" />
            <input type="hidden" asp-for="Schedule_Exchange1Id" />
            <input type="hidden" asp-for="Schedule_Exchange2Id" />
            <input type="hidden" asp-for="Date_Exchange_Request" />
            <div class="form-group">
                <label class="control-label">Schedule 1 Date</label>
                <p>@Html.DisplayFor(model => model.Schedule_Exchange1.Schedule.Date)</p>

            </div>
            <div class="form-group">
                <label class="control-label">Nurse 1</label>
                <p>@Html.DisplayFor(model => model.Schedule_Exchange1.Schedule.Nurse.Name)</p>

            </div>
            <div class="form-group">
                <label class="control-label">Schedule 2 Date</label>
                <p>@Html.DisplayFor(model => model.Schedule_Exchange2.Schedule.Date)</p>
                
            </div>
            <div class="form-group">
                <label class="control-label">Nurse 2</label>
                <p>@Html.DisplayFor(model => model.Schedule_Exchange2.Schedule.Nurse.Name)</p>

            </div>
            <div class="form-group">
                <label asp-for="RequestState" class="control-label"></label>
                <select asp-for="RequestState" class="form-control">
                    <option value="Approved">Approved</option>
                    <option value="Not Approved">Not Approved</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
