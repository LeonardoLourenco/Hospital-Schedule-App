@model HospitalSchedule.Models.Exchange_Request

@{
    ViewData["Title"] = "Validate Exchange Request";
}

<h2>Validate Exchange Request</h2>

<hr />
<div class="row">
    <div class="col-md-4">
 
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Exchange_RequestId" />
            <input type="hidden" asp-for="Schedule_Exchange1Id" />
            <input type="hidden" asp-for="Schedule_Exchange2Id" />
            <input type="hidden" asp-for="Date_Exchange_Request" />
            <div class="form-group">
                <label class="control-label">Schedule 1 Date</label>
                <p> @TempData["Nurse1"] </p>  @*Data do primeiro horário*@

            </div>
            <div class="form-group">
                <label class="control-label">Nurse 1</label>
                <p> </p>  @*Enfermeiro do primeiro horário*@

            </div>
            <div class="form-group">
                <label class="control-label">Schedule 2 Date</label>
                <p> </p>  @*Data do segundo horário*@

            </div>
            <div class="form-group">
                <label class="control-label">Nurse 2</label>
                <p> </p>  @*Enfermeiro do segundo horário*@

            </div>
            <div class="form-group">
                @*alteravel*@
                <label asp-for="RequestState" class="control-label"></label>
                <select asp-for="RequestState" class="form-control">
                    <option value="Approved">Approved</option>
                    <option value="Not Approved">Not Approved</option>
                </select>
            </div>

            <div class="form-group">
                @*alteravel*@
                <label asp-for="Date_RequestState" class="control-label"></label>
                @*<input asp-for="Date_RequestState" class="form-control" />*@
                <span asp-validation-for="Date_RequestState" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
